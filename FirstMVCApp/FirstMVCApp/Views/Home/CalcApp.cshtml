@model string

<form action="/Home/CalcApp" method="post">
    <div class="form-row">
        <label for="first-number">First Number: </label>
        <input id="first-number" name="first" type="number" step="0.0000001" />
    </div>
    <div class="form-row">
        <label for="second-number">Second Number: </label>
        <input id="second-number" name="second" type="number" step="0.0000001" />
    </div>
    <fieldset class='legacy-form-row'>
        <legend>Operation</legend>
        <input id='addition'
               name='operation'
               type='radio'
               value='add'
               checked />
        <label for='addition' class='radio-label'>Addition</label>
        <input id='subtraction'
               name='operation'
               type='radio'
               value='sub' />
        <label for='subtraction' class='radio-label'>Subtraction</label>
        <input id='multiplication'
               name='operation'
               type='radio'
               value='multiply' />
        <label for='multiplication' class='radio-label'>Multiplication</label>
        <input id='division'
               name='operation'
               type='radio'
               value='divide' />
        <label for='division' class='radio-label'>Division</label>
    </fieldset>
    <div class="form-row">
        <label for="answer">Answer: </label>
        <span id="answer" name="answer">@Model</span>
    </div>
    <div class="form-row">
        <button>Submit</button>
    </div>
</form>