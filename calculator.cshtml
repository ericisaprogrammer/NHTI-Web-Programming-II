@{
  string ans = "";
  if(IsPost) {
    string operation = Request["operator"];
    double firstNumber = Convert.ToDouble(Request["first-number"]);
    double secondNumber = Convert.ToDouble(Request["second-number"]);
    if(firstNumber == null || secondNumber == null) {
      ans = "Put some fucking numbers in there, you nazi";
    }
    else {
      double temp = 0;
      switch(operation) {
        case "add":
          temp = firstNumber + secondNumber;
          ans = "" + temp;
          break;
        case "sub":
          temp = firstNumber - secondNumber;
          ans = "" + temp;
          break;
        case "multiply":
          temp = firstNumber * secondNumber;
          ans = "" + temp;
          break;
        case "divide":
          if(secondNumber == 0) {
            ans = "Bruh, you gon break me no 0 in denom plz";
          }
          else {
            temp = firstNumber / secondNumber;
            ans = "" + temp;
          }
          break;
        default:
          ans = "TF how you do this???";
          break;
      }
    }
  }
}

<!DOCTYPE html>
<html>
  <head>
    <title>Calculator</title>
  </head>
	<body>
    <form action="" method="post">
      <div class="form-row">
        <label for="first-number">First Number: </label>
        <input id="first-number" name="first" type="number"/>
      </div>
      <div class="form-row">
        <label for="second-number">Second Number: </label>
        <input id="second-number" name="second" type="number"/>
      </div>
      <fieldset class='legacy-form-row'>
        <legend>Operation</legend>
        <input id='addition'
               name='operation'
               type='radio'
               value='add'
               checked />
        <label for='addition' class='radio-label'>Addition</label>
        <input id='subtraction'
               name='operation'
               type='radio'
               value='sub' />
        <label for='subtraction' class='radio-label'>Subtraction</label>
        <input id='multiplication'
               name='operation'
               type='radio'
               value='multiply' />
        <label for='subtraction' class='radio-label'>Multiplication</label>
        <input id='division'
               name='operation'
              type='radio'
              value='divide' />
        <label for='subtraction' class='radio-label'>Division</label>
      </fieldset>
      <div class="form-row">
        <label for="answer">Answer: </label>
        <span id="answer" name="answer">@ans</span>
      </div>
      <div class="form-row">
        <button>Submit</buttons>
      </div>
    </form>
  </body>
</html>
