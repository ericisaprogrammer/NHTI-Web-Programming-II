@{
  string ans = "";

  if (IsPost) {
    string op = Request["operation"];
    double firstNumber = Convert.ToDouble(Request["first"]);
    double secondNumber = Convert.ToDouble(Request["second"]);
    if(firstNumber == null || secondNumber == null) {
      ans = "Put some numbers in there, you nazi";
    }
    else {
      switch(op) {
        case "add":
          ans = (firstNumber + secondNumber) + "";
          break;
        case "sub":
          ans = (firstNumber - secondNumber) + "";
          break;
        case "multiply":
          ans = (firstNumber * secondNumber) + "";
          break;
        case "divide":
          if(secondNumber == 0) {
            ans = "ERR: DIVIDE BY ZERO";
          }
          else {
            ans = (firstNumber / secondNumber) + "";
          }
          break;
        default:
          ans = "Please select an operation.";
          break;
      }
    }
  }

}


<!DOCTYPE html>
<html>
  <head>
    <title>Calculator</title>
  </head>
	<body>
    <form action="" method="post">
      <div class="form-row">
        <label for="first-number">First Number: </label>
        <input id="first-number" name="first" type="number" step="0.0000001" default="0"/>
      </div>
      <div class="form-row">
        <label for="second-number">Second Number: </label>
        <input id="second-number" name="second" type="number" step="0.0000001" default="0"/>
      </div>
      <fieldset class='legacy-form-row'>
        <legend>Operation</legend>
        <input id='addition'
               name='operation'
               type='radio'
               value='add'
               checked />
        <label for='addition' class='radio-label'>Addition</label>
        <input id='subtraction'
               name='operation'
               type='radio'
               value='sub' />
        <label for='subtraction' class='radio-label'>Subtraction</label>
        <input id='multiplication'
               name='operation'
               type='radio'
               value='multiply' />
        <label for='subtraction' class='radio-label'>Multiplication</label>
        <input id='division'
               name='operation'
              type='radio'
              value='divide' />
        <label for='subtraction' class='radio-label'>Division</label>
      </fieldset>
      <div class="form-row">
        <label for="answer">Answer: </label>
        <span id="answer" name="answer">@ans</span>
      </div>
      <div class="form-row">
        <button>Submit</buttons>
      </div>
    </form>
  </body>
</html>
